<h1>Listing users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Given name</th>
      <th>Family name</th>
      <th>Email</th>
      <th>User ID</th>
      <th>Password digest</th>
      <th>Country</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.given_name %></td>
        <td><%= user.family_name %></td>
        <td><%= user.email %></td>
        <td><%= user.id %></td>
        <td>[snipped]</td>
        <td><%= user.country %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
