<h1>Listing histories</h1>

<table>
  <thead>
    <tr>
      <th>Application date and time</th>
      <th>Card</th>
      <th>Approved</th>
      <th>Notes</th>
      <th>Closed</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.application_date_and_time %></td>
        <td><%= history.card_id %></td>
        <td><%= history.approved %></td>
        <td><%= history.notes %></td>
        <td><%= history.closed %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

